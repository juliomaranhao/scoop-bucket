{
    "version": "2.58",
    "description": "Light-weight and easy-to-use password manager",
    "homepage": "https://keepass.info",
    "license": "GPL-2.0-or-later",
    "url": "https://downloads.sourceforge.net/project/keepass/KeePass%202.x/2.58/KeePass-2.58.zip",
    "hash": "sha1:5ed611196f0a97c176f7aa3c145d4d64b766749b",
    "pre_install": [
        "function Disable-KeePassConfigTransactions {",
        "    param (",
        "        $FileName",
        "    )",
        "    $config = New-Object System.Xml.XmlDocument",
        "    $config.Load($FileName)",
        "    $node = $config.SelectSingleNode(\"/Configuration/Application/UseTransactedConfigWrites\")",
        "    if (($node -eq $null) -or ($node.InnerText -ne \"false\")) {",
        "        if ($node) {",
        "            $node.InnerText = \"false\"",
        "        } else {",
        "            $appnode = $config.SelectSingleNode(\"/Configuration/Application\")",
        "            $newnode = $config.CreateElement(\"UseTransactedConfigWrites\")",
        "            $newnode.InnerText = \"false\"",
        "            $appnode.AppendChild($newnode) | Out-Null",
        "        }",
        "        $settings = New-Object System.Xml.XmlWriterSettings",
        "        $settings.Indent = $true",
        "        $settings.IndentChars = \"`t\"",
        "        $settings.Encoding = New-Object System.Text.UTF8Encoding($false)",
        "        $writer = [System.Xml.XmlWriter]::Create($FileName, $settings)",
        "        $config.Save($writer)",
        "        $writer.Dispose()        ",
        "    }",
        "}",
        "if (Test-Path \"$persist_dir\\KeePass.config.xml\") {",
        "    Disable-KeePassConfigTransactions \"$persist_dir\\KeePass.config.xml\"",
        "} else {",
        "    $content = \"<?xml version=`\"1.0`\" encoding=`\"utf-8`\"?>",
        "<Configuration xmlns:xsd=`\"http://www.w3.org/2001/XMLSchema`\" xmlns:xsi=`\"http://www.w3.org/2001/XMLSchema-instance`\">",
        "    <Application>",
        "        <UseTransactedConfigWrites>false</UseTransactedConfigWrites>",
        "    </Application>",
        "</Configuration>\"",
        "    Out-File -InputObject $content -FilePath \"$dir\\KeePass.config.xml\"",
        "}"
    ],
    "bin": "KeePass.exe",
    "shortcuts": [
        [
            "KeePass.exe",
            "KeePass"
        ]
    ],
    "persist": [
        "KeePass.config.xml",
        "Plugins",
        "Languages"
    ],
    "checkver": {
        "url": "https://keepass.info/update/version2x.txt",
        "regex": "KeePass:([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://downloads.sourceforge.net/project/keepass/KeePass%20$majorVersion.x/$version/KeePass-$version.zip"
    }
}
