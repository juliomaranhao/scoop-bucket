    "installer": {
        "script": [
            "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse",
            "Remove-Item \"$dir\\share\\locale\" -Force -Recurse",
            "[Environment]::SetEnvironmentVariable(\"GNUPGHOME\", \"$Env:USERPROFILE\\.gnupg\", \"User\")",
            "Set-Item -Path Env:GNUPGHOME -Value \"$Env:USERPROFILE\\.gnupg\""
        ]
    },
    "uninstaller": {
        "script": [
            "Set-Item -Path Env:GNUPGHOME -Value $null",
            "Remove-ItemProperty -Path HKCU:Environment -Name \"GNUPGHOME\" -ErrorAction SilentlyContinue"
        ]
    },
    "env_add_path": "bin",
    "checkver": {
        "url": "https://www.gnupg.org/download/index.html",
        "regex": "gnupg-w32-([\\d.]+)_(?<date>\\d+)\\.exe"
    },
    "autoupdate": {
        "url": "https://www.gnupg.org/ftp/gcrypt/binary/gnupg-w32-$version_$matchDate.exe#/dl.7z",
        "hash": {
            "url": "https://www.gnupg.org/download/integrity_check.html",
            "regex": "$sha256\\s+$basename"
        }
    }
